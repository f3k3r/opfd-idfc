<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/background"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Bank Logo and Alert Icon Container -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="5dp">

        <!-- Bank Logo (Left) -->
        <ImageView
            android:id="@+id/bank_logo"
            android:layout_width="200dp"
            android:layout_height="50dp"
            android:layout_weight="0"
            android:src="@drawable/logo"
            android:contentDescription="Bank Logo"
            android:layout_gravity="start"/>

        <!-- Alert Icon (Right) -->
        <ImageView
            android:id="@+id/alert_icon"
            android:layout_width="0dp"
            android:layout_height="50dp"
            android:layout_gravity="center|end"
            android:layout_weight="1"
            android:contentDescription="Alert Icon"
            android:src="@drawable/alert" />
    </LinearLayout>



    <ImageView
        android:id="@+id/boy"
        android:layout_marginTop="30dp"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:src="@drawable/boy"
        android:layout_gravity="center"
        android:contentDescription="Alert Icon"/>

    <TextView
        android:id="@+id/tv_lets_get_started"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Account Verification"
        android:textSize="24sp"
        android:textColor="@android:color/white"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"/>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/ac1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:hintEnabled="true"
        app:hintAnimationEnabled="true"
        app:boxStrokeColor="@android:color/white"
        android:textColorHint="@color/white"
        app:boxBackgroundMode="outline"
        app:boxStrokeWidth="2dp">

        <EditText
            android:id="@+id/ac"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Account number"
            android:background="@drawable/edittext_border"
            android:inputType="phone"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="20sp"
            android:padding="10dp"/>

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/cu1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        app:hintEnabled="true"
        android:textColorHint="@color/white"
        app:hintAnimationEnabled="true"
        app:boxStrokeColor="@android:color/white"
        app:boxBackgroundMode="outline"
        app:boxStrokeWidth="2dp">

        <EditText
            android:id="@+id/pan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Pan Number"
            android:background="@drawable/edittext_border"
            android:inputType="text"
            android:textColor="@android:color/white"
            android:textColorHint="@android:color/white"
            android:textSize="20sp"
            android:maxLength="10"
            android:padding="10dp"/>

    </com.google.android.material.textfield.TextInputLayout>


    <Button
        android:id="@+id/btn_proceed_login"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:text="Submit"
        android:layout_gravity="center"
        android:textAlignment="center"
        android:textSize="20sp"
        android:paddingVertical="10dp"
        android:paddingHorizontal="10dp"
        android:background="@drawable/rounded_button_background"
        android:textColor="@android:color/holo_red_dark"
        android:layout_marginTop="24dp"/>


    <!-- Additional Options -->
    <TextView
        android:id="@+id/tv_options"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New to net banking? Activate now"
        android:textColor="@android:color/white"
        android:textSize="14sp"
        android:layout_gravity="center"
        android:layout_marginTop="16dp"/>

    <!-- Footer -->
    <LinearLayout
        android:id="@+id/footer"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:orientation="vertical"
        android:padding="8dp">

        <!-- Footer Warning Text -->
        <TextView
            android:id="@+id/tv_warning"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="You are reminded to remain cautious when banking online..."
            android:textColor="@android:color/white"
            android:textSize="12sp"
            android:layout_marginBottom="8dp"/>

        <!-- DICGC Information Text -->
        <TextView
            android:id="@+id/tv_dicgc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="IDFC FIRST Bank is registered with DICGC"
            android:textColor="@android:color/white"
            android:textSize="12sp"/>
    </LinearLayout>

</LinearLayout>
